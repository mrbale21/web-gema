datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Attachment {
  id        Int      @id @default(autoincrement())
  name      String
  type      String
  extname   String
  size      Int
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Menu {
  id        Int       @id @default(autoincrement())
  title     String
  href      String?
  submenus  Submenu[] 
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Submenu {
  id        Int      @id @default(autoincrement())
  title     String
  href      String?
  menuId    Int
  menu      Menu     @relation(fields: [menuId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String?  @unique
  content   String
  image     String?
  tag       String?
  editor    String?   
  createdAt DateTime @default(now())

  comments Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String?  @unique
  comment   String
  status    String?
  createdAt DateTime @default(now())
  newsId    Int
  News      News     @relation(fields: [newsId], references: [id])
}

model Banner {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String?  @unique
  subtitle  String
  desc      String
  image     String?
}

model Tenant {
  id           Int     @id @default(autoincrement())
  nameTenant   String
  address      String
  desc         String
  phone        String
  email        String
  linkMaps     String?
  linkFacebook String?
  linkInstagram String?
  linkTwitter   String?
  linkLinkedin  String?
  copyRight    String?
  imageLogo    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Product {
  id           Int     @id @default(autoincrement())
  name         String
  desc         String
  link         String?
  image        String?
}

model Superior {
  id           Int     @id @default(autoincrement())
  title        String
  desc         String
  icon         String?
}

model Statistic {
  id          Int     @id @default(autoincrement())
  name        String
  count       Int
  image       String?
}

model Partner {
  id          Int     @id @default(autoincrement())
  name        String?
  link        String?
  image       String?
}

model Chairman {
  id             Int        @id @default(autoincrement())
  slug           String?    @unique
  name           String
  title          String
  sub1           String
  sub2           String
  content        String   @default("")
  image          String?
  position       String
  period         String
  createdAt      DateTime @default(now())
  city           String
  ToS            String
}

model VisiMisi {
  id             Int        @id @default(autoincrement())
  slug           String?    @unique
  title          String
  subtitle       String
  vs             String
  ms             String
  moto           String
  titleMoto      String
  visi           Visi[]
  misi           Misi[]
}

model Visi {
  id             Int        @id @default(autoincrement())
  slug           String?    @unique
  title          String
  auth          VisiMisi?        @relation(fields:[authId], references: [id])
  authId        Int?
}

model Misi {
  id             Int        @id @default(autoincrement())
  slug           String?    @unique
  title          String
  auth          VisiMisi?        @relation(fields:[authId], references: [id])
  authId        Int?
}

model Timeline {
  id             Int        @id @default(autoincrement())
  slug           String?    @unique
  title          String
  year           String
  desc           String
} 

model Program {
  id           Int     @id @default(autoincrement())
  title        String
  desc         String
  icon         String?
}

model Gallery {
  id        Int      @id @default(autoincrement())
  name      String
  imageUrl  String?
  createdAt DateTime @default(now())
}

model Video {
  id        Int      @id @default(autoincrement())
  name      String
  videoUrl  String?   
  type      VideoType
  createdAt DateTime @default(now())
}

enum VideoType {
  YOUTUBE
  LOCAL
}

